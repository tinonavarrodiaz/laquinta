---
import Layout from "../layouts/Layout.astro";
import TopPage from "../components/TopPage.astro";
---

<Layout title="La Quinta - Plumbing Solutions" page="services">

  <TopPage />
  <h1 class="section__title">Services</h1>
  <section class="section services__section">
    <ul class="services__list">
      <li> Drain Cleaning</li>
      <li> Sewer Repairs</li>
      <!-- <li> Hydrojetting</li>
      <li> Leak Detection</li> -->
      <li> Faucet Repair &amp; Replacement</li>
      <li> Toilet Repair &amp; Replacement</li>
      <!-- <li> Slab leak Repair</li> -->
      <li> Water Filtration Systems</li>
      <li> Water Heater Repairs</li>
      <li> Tankless Water Heaters</li>
    </ul>

    <div class="services__slider">
      <img src="/img/img1.jpg" alt="" class="is-active">
      <img src="/img/img2.jpg" alt="">
      <img src="/img/img3.jpg" alt="">
      <img src="/img/img4.jpg" alt="">
    </div>
  </section>

</Layout>

<script>
  const slider = document.querySelector('.services__slider')
  const imgs = Array.from(slider.querySelectorAll('img'))
  const total = imgs.length
  setInterval(() => {
    let active = slider.querySelector('.is-active')
    let index = imgs.indexOf(active)
    imgs.map((img) => {
      img.classList.remove('is-active')
    })
    if (index < total - 1) {
      imgs[index + 1].classList.add('is-active')
    } else {
      imgs[0].classList.add('is-active')
    }
  }, 3000);
</script>
